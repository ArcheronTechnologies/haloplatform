# Halo Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql+asyncpg://halo:halo@localhost:5432/halo

# Redis
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# SCB Företagsregistret API
# Register at: https://www.scb.se/vara-tjanster/bestall-data-och-statistik/foretagsregistret/
SCB_CERT_PATH=/path/to/certificate.pfx
SCB_CERT_PASSWORD=your_cert_password

# Bolagsverket HVD API
# Register at: https://bolagsverket.se/apierochoppnadata/
BOLAGSVERKET_API_KEY=your_api_key

# Lantmäteriet Open Data
# Register at: https://opendata.lantmateriet.se/
LANTMATERIET_API_KEY=your_api_key

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=change-this-to-a-secure-random-string

# NLP Model Paths
KB_BERT_MODEL_PATH=./models/kb-bert-ner
GPT_SW3_MODEL_PATH=./models/gpt-sw3

# Security
CORS_ORIGINS=["http://localhost:3000"]
